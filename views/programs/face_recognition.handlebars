<!DOCTYPE html>
<html>
<head>
  <title>Camera Stream</title>
  <style>
    video {
      width: 100%;
      height: 70%;
    }
    .submit-btn {
  display: inline-block;
  background-color: #4caf50;
  color: #fff;
  padding: 10px 20px;
  border-radius: 4px;
  cursor: pointer;
  margin-top: 20px;
  transition: background-color 0.3s ease;
}

.submit-btn:hover {
  background-color: #45a049;
}
  </style>
</head>
<body>
  <center><h1>{{cameratext}}</h1></center>
  <video id="videoElement" autoplay></video>

  <form action="/transaction_complete" method="POST">
    <center><button type="submit" class="submit-btn">Start verifying</button></center>
  </form>

  <script>
    var videoElement = document.getElementById('videoElement');
    var snapshotInput = document.getElementById('snapshotInput');

    navigator.mediaDevices.getUserMedia({ video: true })
      .then(function (stream) {
        videoElement.srcObject = stream;
      })
      .catch(function (error) {
        console.log('Error accessing camera:', error);
      });
  </script>
</body>
</html>
